---
import type { WebWork } from "../data/webWorks";

interface Props {
  work: WebWork;
}

const { work } = Astro.props;
---

<article class={`web-work-card ${work.isPlaceholder ? "placeholder" : ""}`}>
  <div class="card-thumbnail">
    <img src={work.thumbnail} alt={work.name} />
  </div>
  <div class="card-content">
    <div class="card-header">
      <h3 class="card-title">{work.name}</h3>
      {
        work.url && (
          <a
            href={work.url}
            target="_blank"
            rel="noopener noreferrer"
            class="card-url-icon"
            aria-label="Visit website"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
              <polyline points="15 3 21 3 21 9" />
              <line x1="10" y1="14" x2="21" y2="3" />
            </svg>
          </a>
        )
      }
    </div>
    {work.industry && <p class="card-industry">{work.industry}</p>}
    {work.industry && <hr class="card-divider" />}
    <p class="card-description">{work.description}</p>
    {
      work.technologies.length > 0 && (
        <div class="card-technologies">
          {work.technologies.map((tech: string) => (
            <span class="tech-tag">{tech}</span>
          ))}
        </div>
      )
    }
  </div>
</article>
